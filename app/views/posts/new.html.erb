<div class="div_addpost">
<h1>Add Post</h1>
<%= form_for :post, url: posts_path do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title, {:class => 'form_title'} %>
</p>
<p>
  <%= f.label :body %><br>
  <%= f.text_area :body, {:class => 'textarea_body'} %>
</p>
<p>
  <%= f.submit({ :class => 'button_design'}) %>
</p>
<% end %>
</div>
